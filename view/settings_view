# Import module
from tkinter import *

# object
from tkinter import ttk

root = Tk()
# size
root.geometry("400x400")


# label
def show():
    label.config(text=clicked.get())


# dropdown
options = [
    "Black",
    "White",
    "Yellow",
    "Green",
    "Blue",
    "Red",
    "Purple"
]

# menu datatype
clicked = StringVar()

# initial text
clicked.set("Black")

# Dropdown
drop = OptionMenu(root, clicked, *options)
drop.pack()

# Button
Button(root, text="Set Tile Color", command=show).pack()

# Label
label = Label(root, text=" ")
label.pack()


# display text definition
def display_text():
    global entry
    string = entry.get()
    lab.configure(text=string)


# label for input
lab = Label(root, text="", font=("Courier 12 bold"))
lab.pack()

# widget to get typed input
entry = Entry(root, width=40)
entry.focus_set()
entry.pack()

# button to enter input
ttk.Button(root, text="Select board size", width=20, command=display_text).pack(pady=20)

# Run tkinter
root.title('Settings')
root.mainloop()
